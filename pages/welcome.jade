doctype
html
	head
		title="FSE Chat - Join chat"
		script(src='//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js')
		script(src='/socket.io/socket.io.js')
		script(src='/validate.js')
	body
		#chatContainer(style='width: 500px; height: auto; background-color: #fff; margin: 0 auto; padding: 5px;')
			#content(style='width: 500px; height: 150px; padding: 0; margin: 0;')
			.controls(style='width: 500px; margin: 10px auto;')
				div
					h2 Welcome to FSE chat. Enter your name to join
				|   Name:
				br
				input#uName(style='width:480px; height: 15px; padding: 2px; margin-bottom: 5px;')
				div#errors(style='width:480px; height: 15px; padding: 2px; margin-bottom: 5px; margin-top: 5px; color: red;')
				input#join(type='submit', value='Join', style='background-color: #048abb; border: none; padding: 10px 20px; color: #fff; font-size: 16px; border-radius: 3px;')